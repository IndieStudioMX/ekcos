.company-wrapper
	height 100%
	width 100%
	position relative
	top 5rem

.company-container
	background url('../images/power-bg.jpg') no-repeat
	background-size 100%
	position relative
	width 100%
	height 100%
	margin-top -5rem
	.company-title
		top 38rem
		margin 0 auto
		position relative
		width 35%
		line-height 27px
		font-size 1.7rem
.footer-company 
	display block


//Generic styles for Netbook 10"
@media screen and (min-width 1024px) and (min-height 600px)
	.company-title
		top 26rem !important
	.container-n 
		width 878px !important
		
//Generic styles for Netbook 12"
@media screen and (min-width 1024px) and (min-height 768px)
	.company-container .company-title 
		top 37rem !important
		width 37%
	.container-n 
		width 876px !important