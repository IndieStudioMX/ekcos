.company-wrapper
	height 100%
	width 100%
	position relative
	top 5rem

.company-container
	background url('../images/power-bg.jpg') no-repeat
	background-size 100%
	position relative
	width 100%
	height 100%
	margin-top -5rem
	.company-title
		top 38rem
		margin 0 auto
		position relative
		width 35%
		line-height 27px
		font-size 1.7rem
.footer-company 
	display block


@media screen and (min-width 200px) and (max-width 349px)
	.company-container 
		height 59.9rem
		max-height 100%
		background-size 100% 100%
		bottom 0
		.company-title 
			top 20rem 
			width 100%
			font-size 1.3rem 
			
@media screen and (min-width 350px) and (max-width 479px)
	.company-container 
		height 68.5rem 
		max-height 69rem 
		background-size 100% 100%
		.company-title 
			top 20rem 
			width 100%
			font-size 1.3rem
			

//Generic styles for Netbook 10"
@media screen and (min-width 1024px) and (min-height 600px)
	.company-title
		top 26rem !important
	.container-n 
		width 878px !important
		
		
//Generic styles for Netbook 12"
@media screen and (min-width 1024px) and (min-height 768px)
	.company-container .company-title 
		top 37rem !important
		width 37%
	.container-n 
		width 876px !important
		
//Generic styles for Netbook 12"
@media screen and (min-width 1280px) and (min-height 768px)
	.company-container 
		min-height 95rem
		height 100% 
		max-height 120rem
		.company-title 
			top 43rem !important
			width 61%
			font-size 2.9rem
	
		

@media screen and (min-width 2000px) and (min-height 768px)
	.company-container .company-title 
		top 80rem !important
		width 37%
		font-size 2.9rem
