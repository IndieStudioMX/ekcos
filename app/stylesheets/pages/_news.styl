.news-wrapper
	height auto
	width 100%
	position relative
	top 5rem

.news-container
	background url('../images/news-bg.jpg') no-repeat
	background-size 100%
	position relative
	with 100%
	height 130rem
	.news-quote-container
		margin-top 21rem
		.news-quote-title
			border-bottom 2px solid rgba(0,0,0,.3)
			margin 0 auto
			width 13%
			font-size 4.5rem
			margin-bottom 3rem
		.news-quote 
			line-height 10px
			font-size 1.5rem
		.news-quote-author 
			margin 3rem auto 0 auto
			border-bottom 2px solid rgba(0,0,0,.2)
			width 10%
			font-weight bold
		.news-quote-role 
			font-weight bold

.container-n
	width 1000px
	margin 0 auto