.docs-wrapper
	height auto
	width 100%
	position relative
	height 602px

.docs-container
	position relative
	background url('../images/power-bg.jpg') no-repeat
	with 100%
	height 70.5rem
	background-size 100% 100%
	top -4rem

.docs-items-container
	top 26rem
	position relative

.buynow-btn
	position relative
	top -10.2rem

.footer-docs 
	position absolute
	background: #000;
	margin-top: 1rem;
	padding: 0 2.9rem;
	line-height: 4.5rem;
	width: 100%;
	height: auto;
	font-size: 1.3rem;
	p 
		color $text-color-light 
	a
		color $text-color-light 
		display block
		width 100%
		height 40px
	.brand-footer
		position relative
		top -2.5rem
	
.leaf-docs
	top 12.2rem
	
.container-docs 
	width 1000px
	margin 0 auto

.thumbnail 
	width 121%
	
.buynow-btn
	background url('../images/buynow-btn.png') no-repeat
	background-size 100% 100%
	border 0
	padding 1.8rem 2.6rem
	color rgb(204,204,51)
	&:hover, &:active, &:focus
		opacity .9
		background url('../images/buynow-btn.png') no-repeat
		background-size 100% 100%
		color lighten(rgb(204,204,51), 5%)
		border 0
		outline 0
		outline-offset 0
		box-shadow inset 0 0 0