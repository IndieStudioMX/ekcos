.row
	margin-right 0
	margin-left 0

.leaf-restroom
	background url('../images/leaf.png')
	background-repeat no-repeat
	background-size 100%
	width 84%
	height 33rem
	position absolute
	top 8rem
	left 0
	z-index 1

.power-item 
	position absolute 
	left 55rem
	top 17.55rem
	a 
		position relative
		left -1rem
		display block
		background black
		text-align center
		width 44%
		text-transform uppercase
		padding 0.3rem 0
		margin -2rem auto 0 auto
		color rgba(255,255,255,.8)
		font-size 1.5rem
		&:hover 
			text-decoration none
			color rgba(255,255,255,.8)
	img 
		max-width 100%
.ekcos-item
	position absolute
	top 16.9rem
	left 19rem
	a 
		display block
		background black
		text-align center
		margin-top 1rem
		position relative
		left -1rem
		width 44%
		text-transform uppercase
		padding 0.3rem 0
		color rgba(255,255,255,.8)
		font-size 1.5rem
		margin -2rem auto 0 auto
		&:hover 
			text-decoration none
			color rgba(255,255,255,.8)
	img 
		max-width 100%

.restroom-message 
	background url('../images/message-restroom.png')
	background-size 100% 100%
	height 40px
	width 100%
	position absolute
	bottom 5.2rem 
	
.restroom-advise 
	background url('../images/advise-restroom.png')
	background-size 100% 100%
	height 92px
	width 222px
	position absolute
	top -6rem
	left 4.5rem

.navProducts-restroom
	top 29rem
	

//Generic styles for Netbook 10"
