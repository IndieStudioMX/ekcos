.trufresh-wrapper
	height auto
	width 100%
	position relative
	top 5rem

.trufresh-container
	background url('../images/tru-back.jpg') no-repeat
	background-size 100%
	background-position 0 -49px
	position relative
	with 100%
	height 50.5rem

.trufresh-features-strong
	position relative
	background #cc3
	background-size 100% 100%
	top 4rem
	width 900px
	padding 0.6rem 0 0 0
	
.trufresh-features-container 
	background url("../images/power-bg.jpg")
	background-size 100% 101%
	background-position 0 -2px
	position relative
	height 253rem
	top -4rem

.trufresh-title 
	margin-bottom 20px


.trufresh-main-features
	border-top 2px solid #444
	border-bottom 2px solid #444
	top 7rem
	position relative
	padding 1.2rem 0 0 0

.trufresh-z
	text-transform uppercase
	font-size 1.5rem
	font-weight bold
	line-height 15px
	
.trufresh-features-fluid
	height 234px 
	width 100%
	position relative
	top 11rem
	background rgba(255,255,255,.4)
	padding 4rem 0

.trufresh-features-requirements
	position: relative;
	background: #cc3;
	background-size: 100% 100%;
	top: 15rem;
	width: 900px;
	
.trufresh-benefits 
	position relative
	background rgba(34,31,31,.3)
	/*background rgb(204,204,51)*/
	background-size 100% 100%
	top 18rem
	width 900px
	padding .6rem 0 0 0 
	
.trufresh-benefits-list 
	list-style none

.trufresh-benefits-l
	padding 2rem 0
	
.trufresh-benefits-p-container
	border-left 2px solid #444
	padding 2rem 0
	.eztrap-benefits-p
		line-height 17px

.trufresh-plumbing-fluid 
	top 20rem
	height 360px
	width 100%
	position relative
	background rgba(255,255,255,.4)
	padding 2rem 0

.img-trufresh
	position relative 
	top 20rem
	img 
		margin 0 auto 

.trufresh-img-perfect
	position relative 
	top 5rem 
	img 
		margin 0 auto 
.trufresh-products-container
	margin-top 23rem
	height 1042px
	position relative
	padding 2rem 0
	background rgba(255,255,255,0.25)

.trufresh-products-container.container img
	margin 0 auto 
	width 220px
	display block

//Generic styles for Netbook 10"
@media screen and (min-width 1024px) and (min-height 600px)
	.trufresh-container 
		background-size 100%






































