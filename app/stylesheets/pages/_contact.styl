@import "helpers/_mixins"

a:hover
	text-decoration none

.contact-wrapper
	height auto
	width 100%
	position relative
	top 5rem

.contact-container
	background url('../images/power-bg.jpg') no-repeat
	background-size 100% 100%
	position relative
	with 100%
	height 300rem
	.contact-quote-container
		margin-top 15rem
		.contact-quote-title
			border-bottom 2px solid rgba(0,0,0,.3)
			margin 0 auto
			width 25%
			font-size 4rem
			margin-bottom 2rem
			text-transform uppercase

.container-c
	width 1000px
	margin 1rem auto 0 auto
	padding-top 1rem

.contact-links-title
	height 70px
	line-height 10px
	background rgb(204,204,51)
	h3
		font-size 2.4rem
		font-weight bold
		margin-top 1rem
	.flag 
		display block  
		width 110px 
		height 110px
		background url('../images/contact-sprite.png')
		background-repeat no-repeat
		background-position 1px -1px 
		background-size 1060px
		position absolute
		top -2.5rem
		left -2.4rem 

.contact-links-title-int
	height auto
	padding 1rem 0
		
.contact-links-content
	margin 2rem auto 1rem auto
	height 130px
	padding 1rem 2rem
	width 80%
	background rgba(0,0,0,.2)
	line-height 18px
	font-size 1.5rem
	.contact-links-content_author, .contact-links-content_author-x,
	.contact-links-content_author-mex
		border-bottom 2px solid rgba(0,0,0,.3)
		width 42%
		font-weight bold
	.contact-links-content_author-x
		width 65%
	.contact-links-content_author-mex
		width 50%
	.contact-links-content_mail, .contact-links-content_phone 
		color black
		font-weight bold
		display block
	.info-container 
		border 2px dashed rgba(0,0,0,.3)
		height 125px
		width 111%
		margin -.7rem 0 -.7rem -1.8rem
		padding .1rem .7rem
		.contact-links-content_mail
			font-weight normal
	
.mail-margin
	margin-top -1rem

.contact-links-title_mex
	height 85px
	margin-left 3rem
	width 97%

