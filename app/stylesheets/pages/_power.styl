.power-wrapper
	height auto
	width 100%
	position relative
	top 5rem

.powerscreen-container
	background url('../images/bg-power-a.png')
	background-size cover
	position relative
	with 100%
	height 61rem
	background-position 0 -126rem

.powerscreen-features
	position relative
	background rgb(204,204,51)
	background-size 100% 100%
	top 40rem
	width 900px

.powerscreen-features-items
	padding-top 1rem
	font-size 1.5rem
	ul 
		list-style none

.powerscreen-antisplash
	height auto
	img 
		margin-top -1rem
	figcaption 
		margin-top -1rem
		font-style italic
		font-size 1.5rem
		padding-bottom 0.5rem

.powerscreen-advise
	width 900px
	background rgba(34,31,31,.3)
	position relative 
	top 43rem
	p 
		width 75%
		margin 0 auto
		padding 1rem 0

.container 
	width 900px
	
.powerscreen-features-container
	background url('../images/power-bg.jpg')
	background-size 100% 101%
	background-position 0 -2px
	position relative
	with 100%
	height 178rem
.powerscreen-features-item
	margin-top 1rem
	figcaption 
		font-style italic 
		font-weight bold
		letter-spacing -0.1rem

.powerscreen-features-legend
	width 900px
	background rgba(34,31,31,.3)
	margin-top 2rem
	padding-top 1.2rem
	padding-bottom 0.3rem
	p
		line-height 1

.powerscreen-features-title
	background rgb(204,204,51)
	margin-top 3rem
	h3 
		font-size 2em
		font-weight bold
		
.powerscreen-features-list
	width 900px
	position relative
	background-size 100%
	margin-top 4rem
	.features-list-l
		list-style none
		li 
			margin .3rem 0
			&:first-child
				width 93%
	.features-list-r
		list-style none

hr 
	border-top 2px solid #444

.bio-container
	background url('../images/bio-bg.png') no-repeat
	background-size 100%
	background-position -129px 0
	width 100%
	height 313px 
	position absolute
	top 125rem
	z-index 1

.bio-line 
	position relative
	top 158rem
	border-top 2px solid #444
	margin 0 auto
	width 69%

.power-products-container
	margin-top 30rem
	height 792px
	position relative
	padding 2rem 0
	background rgba(255,255,255,.25)

.thumbnail 
	border 0
	background transparent
	.product-title
		font-size 1.5rem
		font-weight bold
	.product-description 
		font-size 1.5rem
		line-height 10px
	.btn-product-buy 
		border-radius 0
		background black
		border 0
		border-bottom 4px solid rgb(204,204,51)
		text-transform uppercase
		padding .3rem 1.5rem
		font-size 1.5rem
		&:hover 
			background lighten(rgb(0,0,0,0), 20%)


.footer-power
	background $footer-bg
	margin-top 1rem
	padding 0 2.9rem
	line-height 4.5rem
	position absolute 
	width 100%
	height 55px
	font-size 1.3rem
	p 
		color $text-color-light 
	a
		color $text-color-light 
		display block
		width 100%
		height 40px
		&:hover 
			color $text-color-light 
		
	.brand-footer
		position relative
		top -2.5rem
.power-subtitle-demo, .power-subtitle-product
	font-style italic
	font-weight bold
	
.thumblnail-power 
	img 
		height 40% 
		width 40%
		margin 1rem auto 0 auto
		display block 
