.testimonials-wrapper
	height auto
	width 100%
	position relative
	top 5rem

.testimonials-container
	background url('../images/ekcoscreen-bg.jpg'), url('../')
	background-repeat no-repeat, no-repeat
	background-size 100%
	position relative
	with 100%
	height 41rem

.testimonials-features-container
	background url('../images/power-bg.jpg')
	background-size 100% 101%
	background-position 0 -2px
	position relative
	with 100%
	height 122rem
	padding-top 5rem
	
.container-t, .container-i
	padding 2rem 0
	width 100%
	margin 0 auto

.container-i
	background rgba(0,0,0,.1)

.testimonials-content-p, .testimonials-content-i
	margin 0 auto
	width 900px


.testimonials-author
	display inline
	border-bottom 2px solid #444
	font-size 1.5rem

.testimonials-margin
	margin-top 10rem
	
.footer-t
	display block