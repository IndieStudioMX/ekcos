li
	margin-left 1em

.nav > li > a 
	padding 8px 15px

.nav > li > a:hover, .nav > li > a:focus
	background-color transparent

.navbar.navbar-default.navbar-fixed-top 
	background $menu-light
	border-color transparent
	padding 22px 0
	height 81px

.navbar-default .navbar-nav li 
	& > a 
		font-size 1.1rem
		font-weight bold
		color $text-color
	& > a:hover
		color $font-active-color
	&:nth-child(2), &:nth-child(3), &:nth-child(4), &:nth-child(5)
		margin-left -0.1rem
	&:last-child 
		position absolute
		left 40.3rem
		top -2px
		width 335px
		background url('../images/view-cart.svg') no-repeat 100% 100%
		background-position 0 -14px
		&:hover 
			background url('../images/view-cart_hover.svg') no-repeat 100% 100%
			background-position 0 -14px
		& > a 
			color $text-color
			margin-left  6rem
			text-transform uppercase
			font-size 1rem
			height 50px
			&:hover 
				color $text-color
			& > img
				width 25%
				position absolute 
				top -.6rem
				left 6.9rem

.nav.navbar-nav.navbar-right 
	margin-right 3.5rem;

.navbar-header 
	margin-top -22px

.brand 
	display block
	height auto
	position absolute
	top -13px
	left -7px
	z-index 2
	img 
		max-width 100%
		width 500px
		
.main-menu 
	top -1rem
	left -14.5rem
	position relative
	
.nav-line 
	position absolute
	height 4px
	background $navbar-line
	width 100%
	border-top 0
	left 60rem
	top 1.5rem

.navbar-products
	position absolute
	width 100%
	height 3rem
	left 15rem
	background $menu-dark
	top 3.9rem 
	li 
		float right
		font-size 1.1rem
		&:first-child 
			width 34rem
			background url('../images/docs-bg.svg') no-repeat
			height 60px
			background-position 27px -23px
			background-size inherit
			&:hover 
				background url('../images/docs-bg-hover.svg') no-repeat
				width 34rem
				background-position 27px -27px
				background-size inherit
				height 60px
				
			& > a 
				color $text-color-light
				margin-left: 7rem;
		&:nth-child(2)
			margin-left 0
			margin-right -3.5rem
		&:nth-child(3) 
			margin-left 0
			margin-right 1rem
		&:last-child
			margin-right 1rem
		& > a 
			color $text-color
			font-weight bold
			
.buynow-container 
	position absolute
	top 9rem
	right 16rem
	a 
		display block
		height 100%












	