.carousel 
	position relative
	top 0
	height 100%
	width 100%
	bottom 0
	/*margin-bottom .9rem*/

.carousel-indicators 
	bottom 8rem

.carousel-container 
	/*height 100%*/
	height auto
	width 100%
	position absolute
	top 0
	left 0
	right 0
	bottom 0

.carousel-inner 
	/*top 38px
	height 576px */
	height 100%
	top 0
.carousel-control 
	width 7%
	&:hover, &:focus
		filter unquote('alpha(opacity=' + 50 + ')')
		opacity .5

.carousel-control.left
	height 100% 
	bg-gradient gradient(rgba(0,0,0,.25) 0%, rgba(0,0,0,0.0001) 100%)
.carousel-control.right
	height 100%
	bg-gradient gradient(rgba(0,0,0,0.0001) 0%, rgba(0,0,0,.25) 100%)
	
.carousel-caption
	h3
		color $carousel-title-color
		text-shadow none
		width 460px
		margin -56rem auto 0 auto
		/*font-size 2.7875rem*/
		font-size 26.45pt
		text-transform uppercase
		font-weight bold
	hr 
		border-top 2px solid $carousel-line
		width 483px
		margin-top 18px
		margin-bottom 4px
	p
		margin-top 0
		margin-bottom 0
		text-shadow none
		color $carousel-content-color
		font-weight bold
		font-size 1.30166666667rem

.carousel-caption_message
	height 58px
	width 100%
	background url('../images/caption-bg.svg') no-repeat
	background-size 101% 96%
	background-position -9px 7px
	position absolute
	top 71.2rem
	p 
		font-size 1.3rem
		font-style italic
		line-height 0.5rem 
	.caption_message-p
		margin-top 2.3rem

.waterless-caption
	h3 
		width 300px
		margin -37% auto 0 auto
	hr 
		width 334px

.carousel-inner > .item > img, .carousel-inner > .item > a > img
	height 0% !important 
	top -2rem !important 
	margin-top -37rem
	height auto !important 
	margin-top 3.3rem
	

.slider-01-bg 
	background url('../images/slider-01@1x.png') center center
	background-size cover
	
.slider-02-bg 
	background url('../images/slider-02.jpg') center center
	background-size cover

.slider-03-bg 
	background url('../images/slider-03.jpg') center center
	background-size cover
	margin-top 6rem

.slider-04-bg 
	background url('../images/slider-04.jpg') center center
	background-size cover

.slider-size 
	height 747px

