.carousel 
	position relative
	top 32px
	height 100%
	width 100%
	margin-bottom .9rem

.carousel-indicators 
	bottom 7rem

.carousel-container 
	height 100%
	width 100%
	margin-top 4.9rem

.carousel-control 
	width 7%
	&:hover, &:focus
		filter unquote('alpha(opacity=' + 50 + ')')
		opacity .5

.carousel-control.left 
	bg-gradient gradient(rgba(0,0,0,.25) 0%, rgba(0,0,0,0.0001) 100%)
.carousel-control.right
	bg-gradient gradient(rgba(0,0,0,0.0001) 0%, rgba(0,0,0,.25) 100%)
	
.carousel-caption
	h3
		color $carousel-title-color
		text-shadow none
		width 460px
		margin -51% auto 0 auto
		font-size 3.38rem
		text-transform uppercase
		font-weight bold
	hr 
		border-top 2px solid $carousel-line
		width 483px
		margin-top 18px
		margin-bottom 18px
	p
		margin-top 0
		margin-bottom 0
		text-shadow none
		color $carousel-content-color
		font-weight bold
		font-size 1.55rem

.carousel-caption_message
	height 58px
	width 100%
	background url('../images/caption-bg.svg') no-repeat
	background-size 101% 96%
	background-position -9px 7px
	position absolute
	top 71.2rem
	p 
		font-size 1.3rem
		font-style italic
		line-height 0.5rem 
	.caption_message-p
		margin-top 2.3rem

.waterless-caption
	h3 
		width 300px
		margin -37% auto 0 auto
	hr 
		width 334px